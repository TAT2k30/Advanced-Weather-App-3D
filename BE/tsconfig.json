{
  "compilerOptions": {
    "outDir": "./dist", // Output directory for compiled JS files
    "module": "commonjs",
    "target": "ES2020",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"], // Include all TypeScript files in 'src' directory
  "exclude": ["node_modules", "dist"]
}
